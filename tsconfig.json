{
  "compilerOptions": {
    "allowSyntheticDefaultImports":true,
    "esModuleInterop": true,
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "declaration": true,
    "target": "ESNext",
    "sourceMap": true,
    "lib": ["ESNext"],
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "~/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
